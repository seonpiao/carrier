.angel-list
  width:310px;
  height:182px;
  position:absolute;
  top:116px;
  left:13px;
  z-index:0;
.angel-list
  .angel
    height:18px
    line-height:18px
    font-size:12px
    padding:13px 4px 0 4px
    .iconFlying
      display:inline-block
      height:32px
      width:32px
      float:left
      background:url($bgUrl+"myladyBg.png") no-repeat -130px -324px
      position:relative
      top:-12px
      left:2px
      z-index:0
    a.angelText
      color:#f9f03a
      padding-left:5px
      float:left
      font-size:12px
      line-height:18px
    a.angelText:hover,a.angelText:active
      color:#fff
    a.angelBe,a.angelBe:visited
      display:inline-block
      width:82px
      height:20px
      font-size:12px
      line-height:20px
      text-align:center
      letter-spacing:0px
      margin-top:-1px
      color:#fff
      float:right
      background:url($bgUrl+"myladyBg.png") no-repeat -2px -366px
    a.angelBe:hover
      background:url($bgUrl+"myladyBg.png") no-repeat -2px -389px
      color:#fff
    a.angelBe:active
      background:url($bgUrl+"myladyBg.png") no-repeat -2px -344px
      color:#fff

.followersArea 
  padding-top:10px
  .scrollbars .viewport
    height:130px
    width:282px
.allFollowers li
  display:block
  float:left
  width:60px
  height:18px
  padding-top:48px
  position:relative
  z-index:0
  margin-left:10px
  .followerPic
    display:none
    width:48px
    height:48px
    position:absolute
    top:0px
    z-index:1
    left:5px
  img
    position:absolute
    top:0px
    left:4px
    z-index:2
    width:38px
    height:38px
    padding:6px
    background:url($bgUrl+"photobg.png") no-repeat -1px -2px
  img.followerPicBg1
    background:url($bgUrl+"photobg.png") no-repeat -56px -2px
  img.followerPicBg2
    background:url($bgUrl+"photobg.png") no-repeat -112px -2px
  i.iconVip
    background:url($bgUrl+"vip.png") no-repeat center
    background-size:27px 15px
    position:absolute
    z-index:3
    display:inline-block
    width:50px
    height:15px
    bottom:13px
    left:4px 
  .followerText
    color:#fff
    display:block
    width:60px
    height:20px
    line-height:20px
    text-align:center
    font-size : 12px
    -webkit-transform:scale(0.84,0.84) 
    *font-size:10px
    color:#f9f03a