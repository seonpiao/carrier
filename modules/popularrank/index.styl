.popularrank
	display:block
	.popularrank_box
		height:111px;
		width:302px;
		padding:6px 15px 15px 16px;
		background: url($bgUrl+"player3/new_player_boxbg.png") no-repeat -1px -138px
		.popularrank_con
			width:302px;
			height:90px;
			position:relative;
			z-index:12;
			dl.today_populfans
				//position:relative;
				//z-index:1;
			dl
				width:286px;
				margin:2px auto 0;
				background-color: #0a2233;
				padding: 2px 5px;
				-webkit-border-radius: 3px;
				-moz-border-radius: 3px;
				-webkit-border-radius: 3px;
				-moz-border-radius: 3px;
				border-radius: 3px;
				dt
					width:23px;
					margin-top:5px;
				dt.todypopul_icon
					height:25px;
					background: url($bgUrl+"player3/new_player_icon.png") no-repeat 0 0;
				dt.totalpopul_icon
					height:25px;
					background: url($bgUrl+"player3/new_player_icon.png") no-repeat 0 -26px;
				dd
					width:257px;
					padding-left:6px;
					position:relative;
					.todypopul_list,.totalpopul_list
						width:235px;
						overflow:hidden;
					.todypopul_list
						span
							margin-right:15px;
					span
						color:#7ffdf9;
						font-size:12px;
						float:left;
						line-height:15px;
						vertical-align:middle;
					.mt_3
						margin-top:3px;
					.fans_btn
						width:17px;
						height:10px;
						position:absolute;
						right:2px;
						top:12px;
						cursor:pointer;
						z-index:1;
					.fans_btn.fans_downbtn
						background: url($bgUrl+"player3/new_player_icon.png") no-repeat 0 -77px;
					.fans_btn.fans_upbtn
