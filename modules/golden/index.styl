		.golden_title
			width:234px;
			height:52px;
			background:url($bgUrl+'prop_icon/buygold_titbg.png') no-repeat 0 0;
			left:8px;
			position: absolute;
			top:-42px;
			margin:0 auto;
		.golden_title span
			width:88px;
			height:21px;
			background:url($bgUrl+'prop_icon/buygold_titbg.png') no-repeat 0 -56px;
			display:block;
			margin:7px auto 0;
			display:block;
		.goldencon 
			li
				width:231px;
				height:40px;
				background:url($bgUrl+'prop_icon/gold_conbg.png') no-repeat 0 -53px;
				margin-bottom:5px;
			li:hover
				background:url($bgUrl+'prop_icon/gold_conbg.png') no-repeat 0 0;
				padding:4px;
				margin:-4px -4px 1px;
			li img
				width:41px;
				height:40px;
				float:left;
				background:url($bgUrl+'prop_icon/gold_numbg.png') no-repeat center center;
			li 
				.golden_imgL 
					span
						float:left;
						height:40px;
						line-height:40px;
						margin-left:5px;
			li 
				.buy_btn
					height:34px;
					background-color:#f7aa25;
					margin:2px 2px 0 0;
					padding-bottom:2px;
					border-radius:2px;
					text-align:center;
					vertical-align:middle;
					display:inline-block;
					cursor:pointer;
			li 
				.buy_btn:hover
					background-color:#f7d725;
			li 
				.buy_btn:active
					background-color:#91682e;
				.golden_imgL
					i.coinNum
						font-style:normal;
